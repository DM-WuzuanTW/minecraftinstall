{
    "name": "minecraft-server-installer",
    "version": "2.0.15",
    "description": "Minecraft Server Deployment Tool",
    "main": "src/main/index.js",
    "author": "DiamondHost",
    "license": "MIT",
    "scripts": {
        "start": "electron .",
        "dev": "electron . --dev",
        "build:css": "tailwindcss -i ./src/ui/styles/input.css -o ./src/ui/styles/output.css --minify",
        "watch:css": "tailwindcss -i ./src/ui/styles/input.css -o ./src/ui/styles/output.css --watch",
        "pack": "npm run build:css && electron-builder --dir",
        "dist": "npm run build:css && electron-builder",
        "dist:win": "npm run build:css && electron-builder --win",
        "postinstall": "electron-builder install-app-deps"
    },
    "build": {
        "appId": "tw.diamondhost.mcinstaller",
        "productName": "Minecraft Server Installer",
        "compression": "store",
        "directories": {
            "output": "dist",
            "buildResources": "assets"
        },
        "win": {
            "target": [
                {
                    "target": "portable",
                    "arch": [
                        "x64"
                    ]
                }
            ],
            "icon": "assets/icon.png",
            "artifactName": "${productName}-${version}-Portable.${ext}"
        },
        "files": [
            "src/**/*",
            "assets/icon.png",
            "package.json",
            "node_modules/**/*",
            "!node_modules/*/{CHANGELOG.md,README.md,README,readme.md,readme}",
            "!node_modules/*/{test,__tests__,tests,powered-test,example,examples}",
            "!node_modules/*.d.ts",
            "!node_modules/.bin",
            "!**/*.{iml,o,hprof,orig,pyc,pyo,rbc,swp,csproj,sln,xproj}",
            "!.editorconfig",
            "!**/._*",
            "!**/{.DS_Store,.git,.hg,.svn,CVS,RCS,SCCS,.gitignore,.gitattributes}",
            "!**/{__pycache__,thumbs.db,.flowconfig,.idea,.vs,.nyc_output}",
            "!**/{appveyor.yml,.travis.yml,circle.yml}",
            "!**/{npm-debug.log,yarn.lock,.yarn-integrity,.yarn-metadata.json}",
            "!src/**/*.{ts,map}",
            "!.github",
            "!docs",
            "!dist"
        ],
        "asarUnpack": [
            "node_modules/electron-updater/**/*"
        ],
        "publish": {
            "provider": "github",
            "owner": "DM-WuzuanTW",
            "repo": "minecraftinstall",
            "timeout": 300000
        }
    },
    "dependencies": {
        "axios": "^1.6.5",
        "electron-updater": "^6.1.7",
        "fs-extra": "^11.2.0",
        "adm-zip": "^0.5.10",
        "node-fetch": "^2.7.0"
    },
    "devDependencies": {
        "electron": "^28.2.0",
        "electron-builder": "^24.9.1",
        "tailwindcss": "^3.4.1"
    }
}
